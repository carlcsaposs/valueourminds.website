{
  "name": "website",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "generate": "npm run lint && nuxt generate --modern --fail-on-error",
    "lint:js": "eslint --ext .js,.vue .",
    "lint:style": "stylelint **/*.{vue,css}",
    "lint": "npm run lint:js && npm run lint:style"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valueourminds/website.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/valueourminds/website/issues"
  },
  "homepage": "https://github.com/valueourminds/website#readme",
  "lint-staged": {
    "*.{js,vue}": "eslint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "bootstrap": "^4.5.2",
    "bootstrap-vue": "^2.17.3",
    "core-js": "^3.6.5",
    "nuxt": "^2.14.6"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^3.1.0",
    "@nuxtjs/eslint-module": "^3.0.0",
    "@nuxtjs/style-resources": "^1.0.0",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-nuxt": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "netlify-plugin-checklinks": "^4.1.1",
    "netlify-plugin-csp-generator": "^1.2.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.2",
    "sass-loader": "^10.0.2",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0"
  }
}
